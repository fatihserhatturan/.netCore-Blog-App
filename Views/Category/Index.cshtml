@model IEnumerable<EntityLayer.Concrete.Category>

<body>

    <div>
        <h2>
            Burası Index
        </h2>
        <br />
            <table>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Category Name
                    </th>
                </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.CategoryID
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                </tr>
            }
        </table>
    </div>
</body>