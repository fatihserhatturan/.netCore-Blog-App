@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form class="form-group" method="post">

    @Html.Label("Blog ID")
    @Html.TextBoxFor(x=>x.BlogID, new {@class= "form-control"})
    <br />
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x=>x.BlogTitle, new {@class= "form-control"})
    <br />
    @Html.Label("Blog Kategori")
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.values,new{@class="form-control"})
    <br />
    @Html.Label("Blog Resmi")
    @Html.TextBoxFor(x=>x.BlogImage, new {@class= "form-control"})
    <br />
    @Html.Label("Blog Tarihi")
    @Html.TextBoxFor(x=>x.BlogDate, new {@class= "form-control"})
    <br />
    @Html.Label("Blog Yazarı")
    @Html.DropDownListFor(x=>x.AuthorID,(List<SelectListItem>)ViewBag.valuesAuthor,new{@class="form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x=>x.BlogContent,5,10, new {@class= "form-control"})
    <br />

    <button class="btn btn-info">Kaydet</button>
</form>