@model IEnumerable<EntityLayer.Concrete.Comment>



@{

    ViewBag.Title = "GetCommentByBlog";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}



<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <section class="content">

            <div class="container-fluid">



                <!-- Timelime example  -->

                <div class="row">

                    <div class="col-md-12">

                        <!-- The time line -->

                        <div class="timeline">
                            @foreach(var item in Model){
                            <!-- timeline time label -->

                            <div class="time-label">

                                    <span class="bg-success">@item.CommentID.ToString()</span>

                            </div>

                            <!-- /.timeline-label -->
                            <!-- timeline item -->

                            <div>

                                <i class="fas fa-comment bg-yellow"></i>

                                <div class="timeline-item">

                                    

                                    <h3 class="timeline-header"><a href="#">@item.UserName</a> @item.Mail</h3>

                                    <div class="timeline-body">

                                      @item.CommentText

                                    </div>

                                    <div class="timeline-footer">

                                        <a class="btn btn-primary btn-sm">Deatylar</a>

                                        <a class="btn btn-danger btn-sm">Kaldır</a>

                                    </div>

                                </div>

                            </div>

                            <!-- END timeline item -->
                            }
                        </div>

                    </div>

                    <!-- /.col -->

                </div>

            </div>

            <!-- /.timeline -->

        </section>

        <!-- /.content -->

    </div>

    <!-- ./wrapper -->

</body>

</html>

