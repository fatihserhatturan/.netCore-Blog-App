@{

    ViewBag.Title = "AdminCommentList";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@model IEnumerable<EntityLayer.Concrete.Comment>

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body">

                    <!-- Post -->
                    @foreach (var item in Model)
                    {
                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">

                                <span class="username">

                                    <a href="#">@item.UserName - @item.BlogID</a>



                                </span>

                                <span class="description">Herkese Açık Olarak Paylaşıldı </span>

                            </div>
                            <p>
                                @item.CommentText
                            </p>
                            <p>
                                <br />
                                <span class="float-right">
                                    <a href="/Comment/StatusChangeToTrue/@item.CommentID" class="link-black text-sm">
                                        <i class="far fa-comments mr-1"></i> Yorumu Yayına Al
                                    </a>
                                </span>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

</body>

</html>



