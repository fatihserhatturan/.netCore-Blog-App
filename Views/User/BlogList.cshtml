
@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}
@model IEnumerable<EntityLayer.Concrete.Blog>

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Bloglarım</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>


                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Blog Başlığı

                            </th>

                            <th style="width: 10%">

                                Yazar

                            </th>
                            <th style="width: 10%">
                                Beğeni Miktarı
                            </th>
                             <th style="width: 10%">
                                Blog Durumu
                            </th>

                            <th style="width: 8%" class="text-center">

                                Kategori

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.BlogID </td>

                                <td> @item.BlogTitle </td>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">

                                        </li>



                                    </ul>

                                </td>
                                  @{
                                    int puan = item.BlogRating * 10;
                                }
                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: @puan%">
                                        </div>

                                    </div>

                                    <small>

                                        @item.BlogRating Puan

                                    </small>
                                        
                                 <td class="project-state">
                                     @item.BlogStatus
                                 </td>   

                                <td class="project-state">
                                        @{
                                            string color = "success";
                                        }
                                        @if (item.Category.CategoryName == "yazılım") { color = "dark"; }
                                        @if (item.Category.CategoryName == "gezi") { color = "success"; }
                                        @if (item.Category.CategoryName == "politika") { color = "danger"; }
                                        @if (item.Category.CategoryName == "Tarih") { color = "secondary"; }
                                        @if (item.Category.CategoryName == "Genel") { color = "info"; }



                                    <span class="badge badge-@color">@item.Category.CategoryName</span>

                                </td>

                                <td class="project-actions text-right">



                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Blog/deleteBlog/@item.BlogID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>

</body>

</html>
<a href="/User/AddNewBlog/" class="btn btn-primary">Yeni Blog Ekle</a>

