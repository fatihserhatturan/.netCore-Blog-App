
@{
    ViewData["Title"] = "AuthorSettings";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

@model IEnumerable<EntityLayer.Concrete.Author>

<div class="tab-pane" id="settings">
    @using (Html.BeginForm("AuthorSettings", "User", FormMethod.Post))
    {
    foreach (var item in Model)
    {

        <form class="form-horizontal" method="post">
                <div class="form-group row">

                    <label for="AuthorName" class="col-sm-2 col-form-label">İsim</label>

                    <div class="col-sm-10">

                        <input type="hidden" class="form-control" name="AuthorID" id="inputName" value="@item.AuthorID">

                    </div>

                </div>


            <div class="form-group row">

                <label for="AuthorName" class="col-sm-2 col-form-label">İsim</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" name="AuthorName" id="inputName" value="@item.AuthorName">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputEmail" name="AuthorMail" value="@item.AuthorMail">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputName2" class="col-sm-2 col-form-label">Telefon</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputName2" name="AuthorPhoneNumber" value="@item.AuthorPhoneNumber">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputExperience" class="col-sm-2 col-form-label">Şifre</label>

                <div class="col-sm-10">

                    <input type="text" id="inputExperience" name="AuthorPassword" value="@item.AuthorPassword">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Title</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" name="AuthorTitle" value="@item.AuthorTitle">

                </div>

            </div>
            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Hakkımda</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" name="AuthorAbout" value="@item.AuthorAbout">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Kısa Hakkımda</label>

                <div class="col-sm-10">

                    <input type="text" class="form-control" id="inputSkills" name="AuthorAboutShort" value="@item.AuthorAboutShort">

                </div>

            </div>

            <div class="form-group row">

                <label for="inputSkills" class="col-sm-2 col-form-label">Profil Resmi</label>

                <div class="col-sm-10">

                   @* <input type="text" class="form-control" id="inputSkills" name="AuthorImage" value="@item.AuthorImage">*@
                        <a href="/User/AuthorImageUpload" class="btn btn-primary">Resimi Değiştir</a>

                </div>

            </div>

            <input type="submit" class="btn btn-primary" value="Onayla">

        </form>
    }
    }
</div>



