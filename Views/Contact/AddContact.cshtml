
@{
    ViewData["Title"] = "AddContact";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<div class="site-section bg-light">
    <div class="container">
        <h2>Bizimle İletişime Geçin</h2>
        <div class="row">
            <div class="col-md-7 mb-5">



                <form method="post" class="p-5 bg-white" asp-action="AddContact" asp-controller="Contact">


                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Adınız</label>
                            <input type="text" id="fname" name="Name" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Soyadınız</label>
                            <input type="text" id="lname" name="SurName" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">Email</label>
                            <input type="email" id="email" name="Mail" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="subject">Başlık</label>
                            <input type="subject" id="subject" name="Subject" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">Mesaj</label>
                            <textarea name="Message" id="message" cols="30" rows="7" class="form-control" placeholder="Önerileriniz ,şikayetleriniz ve mesajlarınızı buradan iletebilirsiniz..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Mesaj Gönder" class="btn btn-primary py-2 px-4 text-white">
                        </div>
                    </div>


                </form>
            </div>
            <div class="col-md-5">

                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">Address</p>
                    <p class="mb-4">203 Fake St. Mountain View, San Francisco, California, USA</p>

                    <p class="mb-0 font-weight-bold">Phone</p>
                    <p class="mb-4"><a href="#">+90 553 746 93 29</a></p>

                    <p class="mb-0 font-weight-bold">Email Address</p>
                    <p class="mb-0"><a href="#">fatihserhatturan@gmail.com</a></p>

                </div>

            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("Footer")

