@model IEnumerable<EntityLayer.Concrete.Author>

@foreach (var item in Model)
{
    <section class="site-section py-lg">
        <div class="container">

            <div class="row">
                <div class="col-md-12 col-lg-4">
                    <img src="@item.AuthorImage" style="width: 325px;height:400px" alt="Image Placeholder" class="img-fluid mb-5">
                </div>

                <div class="col-md-12 col-lg-8">
                    <h2>@item.AuthorName</h2>
                    <p class="mb-4">@item.AuthorAbout</p>
                </div>
            </div>

        </div>
    </section>
}